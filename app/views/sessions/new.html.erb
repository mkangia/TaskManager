<div class='col-md-4'>
  <%= form_tag(signin_path, class: "navbar-form navbar-left") do %>
    <div class="form-group input-group">
      <span class='input-group-addon'>Email</span>
      <%= text_field_tag :email, '', class: 'form-control', placeholder: 'Email' %>
    </div>
    <div class="form-group input-group">
      <span class='input-group-addon'>Password</span>
      <%= password_field_tag :password, '', class: 'form-control', placeholder: 'Password' %>
    </div>
    <br/>
    <div class="form-group input-group">
      <%= submit_tag 'Lets Boogie', class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
